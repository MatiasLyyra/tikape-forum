<% @page_title = "UserAuth | Signin" %>
<h1>Sign in</h1>
<%= form_tag({controller: "sessions", action: "create"}, {class: 'form-horizontal'}) do%>
  <div class="form-group">
    <label class="control-laber col-sm-2">Nick:</label>
    <div class="col-sm-6">
      <%= text_field_tag :nick, params[:nick], required: true, class: "form-control"%>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <div class="form-group">
    <label class="control-laber col-sm-2">Password:</label>
    <div class="col-sm-6">
      <%= password_field_tag :password, nil, required: true, class: "form-control"%>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Log in", class: "btn btn-default"%>
    </div>
  </div>
<% end %>
</div>