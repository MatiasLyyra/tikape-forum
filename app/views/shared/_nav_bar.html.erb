<div id="nav-list">
  <ul>
    <li><%= link_to 'Categories', controller: :categories %></li>
    <% if not session[:user_id].nil? %>
      <li><%= link_to 'My profile', user_path(session[:user_id]) %></li>
      <% if User.GetUserById(session[:user_id]).admin %>
        <li><%= link_to 'List all users', all_users_path %></li>
      <% end %>
      <li class="right-align"><%= link_to 'Sign out', signout_path %></li>
    <% else %>
      <li class="right-align"><%= link_to 'Sign up', signup_path %></li>
      <%= render 'shared/login' %>
    <% end %>
  </ul>
</div>