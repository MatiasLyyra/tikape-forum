<h1><%= @category.subject %></h1>
<% if is_user_logged_in? %>
  <%=link_to "Create discussion", controller: "discussions", action: "new", category_id: @category.id %>
<% else %>
  Login to start a new discussion
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Messages</th>
      <th>Latest Message</th>
    </tr>
  </thead>
  <tbody>
  <% @discussions.each do |discussion| %>
    <tr>
      <td><%= link_to discussion.title, discussion_path(discussion.id) %></td>
      <td><%= get_number_of_messages_in_discussion(discussion.id) %></td>
      <td><%= get_newest_message_date_in_discussion(discussion.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>