<%= form_tag({controller: "sessions", action: "create"}, {class: 'nav navbar-form'}) do%>
  <div class="form-group">
  <%= text_field_tag :nick, nil, required: true, autocomplete: 'off', placeholder: "Nick", class: 'form-control'%>
  </div>
  <div class="form-group">
  <%= password_field_tag :password, nil, required: true, placeholder: "Password", class: 'form-control'%>
  </div>
  <div class="form-group">
  <%= submit_tag 'Log in', class: 'btn btn-default'%>
  </div>
<% end %>

