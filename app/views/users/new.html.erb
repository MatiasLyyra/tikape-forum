<% @page_title = "UserAuth | Signup" %>
<div class="Sign_Form">
  <h1>Sign Up</h1>
  <%= form_for(:user, url: {controller: 'users', action: 'create'}, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
      <label class="control-laber col-sm-2">Nick:</label>
      <div class="col-sm-6">
        <%= f.text_field :nick, required: true, class: "form-control" %>
      </div>
      <div class="col-sm-4"></div>
    </div>
    <div class="form-group">
      <label class="control-laber col-sm-2">Password:</label>
      <div class="col-sm-6">
        <%= f.password_field :password, required: true, class: "form-control"%>
      </div>
      <div class="col-sm-4"></div>
    </div>
    <div class="form-group">
      <label class="control-laber col-sm-2">Password Confirmation:</label>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, required: true, class: "form-control" %>
      </div>
      <div class="col-sm-4"></div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :Signup, class: "btn btn-success"%>
      </div>
    </div>
  <% end %>
</div>